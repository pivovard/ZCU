#ifndef SERVERY_H
#define SERVERY_H
typedef struct hra
{
	char *ID;
	char *jmeno;
	hrac_t *hraci[4];
	int pocet_hracu;
	hrac_t *hrajici;
	int kostka;
	sem_t sem_odehrano;
	int hrajici_index;
	struct hra *dalsi;
}hra_t;

void info_hry();
char* generuj_ID();
int najdi_ID(char *id);
void pridej_hrace(hrac_t *hrac);
void udelej_figurky(hrac_t *hrac);
hrac_t *vytvor_hrace(int socket, char *jmeno);
void *recieving(void *arg);
void *serve_request(void *arg);
void vytvor_hru(hrac_t *hrac);
void zarad_hru(hra_t *hra);
void multicast_hra(hra_t *hra, char *zprava);
void pripoj(hrac_t *hrac, hra_t *hra);
hra_t *najdi_hru(char *id);
#endif
