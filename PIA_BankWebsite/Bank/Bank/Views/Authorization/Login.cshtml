@model Bank.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="container">

    <form class="login" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Login" class="control-label">Login:</label>
            <input asp-for="Login" class="form-control" value="@ViewBag.Login" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pin" class="control-label">PIN:</label>
            <input asp-for="Pin" class="form-control" />
            <span asp-validation-for="Pin" class="text-danger"></span>
        </div>
        <p class="text-danger">@ViewBag.ErrMsg</p>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

</div>