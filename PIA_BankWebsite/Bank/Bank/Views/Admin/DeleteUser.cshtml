@model Bank.Models.User

@{
    ViewData["Title"] = "Accounts";
}


<div class="container">
    <h2>Delete User</h2>
    <h3>Are you sure you want to delete this user?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
